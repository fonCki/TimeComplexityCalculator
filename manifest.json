{
  "name": "Something",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Woohoo",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads"
  ],
  "content_scripts" : [{
    "matches": ["<all_urls>"],
    "js" : ["content.js"]
  }]
}
