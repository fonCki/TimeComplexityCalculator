{
  "manifest_version": 3,
  "name": "Text Converter",
  "description": "Converts text to uppercase",
  "version": "2.2.0",
  "action": {
    "default_icon": "./assets/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
